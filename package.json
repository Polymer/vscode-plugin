{
    "name": "polymer-ide",
    "description": "Provides linting, autocompletion, and more for web components.",
    "author": "Polymer Authors",
    "license": "MIT",
    "version": "0.3.0",
    "icon": "polymer.png",
    "publisher": "polymer",
    "engines": {
        "vscode": "^1.4.0"
    },
    "categories": [],
    "repository": {
        "type": "git",
        "url": "https://github.com/Polymer/vscode-plugin"
    },
    "activationEvents": [
        "onLanguage:html",
        "onLanguage:javascript",
        "onLanguage:plaintext"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Polymer Plugin Configuration",
            "properties": {}
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./ || echo ''",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.1.4",
        "vscode": "^1.0.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "polymer-editor-service": "^1.2.0",
        "vscode-languageclient": "^2"
    }
}